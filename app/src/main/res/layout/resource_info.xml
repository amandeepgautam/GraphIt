<?xml version="1.0" encoding="utf-8"?>
<!-- Layout for file browser. -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_descriptor_resource"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/name_resource"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/image_descriptor_resource"
        android:layout_toRightOf="@+id/image_descriptor_resource" />
    <TextView
        android:id="@+id/resource_last_modified"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_resource"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textStyle="italic" />

</RelativeLayout>