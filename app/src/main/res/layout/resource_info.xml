<?xml version="1.0" encoding="utf-8"?>
<!-- Layout for file browser. -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_descriptor_resource"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:paddingTop="@dimen/list_view_padding_top"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/name_resource"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/image_descriptor_resource"
        android:layout_toRightOf="@+id/image_descriptor_resource"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/black"
        android:paddingRight="@dimen/text_view_padding_right"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/list_view_padding_top"/>

    <TextView
        android:id="@+id/resource_last_modified"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_resource"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/black"
        android:paddingRight="@dimen/text_view_padding_right"
        android:textStyle="italic"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:paddingBottom="@dimen/list_view_padding_bottom" />

</RelativeLayout>