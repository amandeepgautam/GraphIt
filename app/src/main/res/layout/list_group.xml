<?xml version="1.0" encoding="utf-8"?>
<!-- Layout for available devices.-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="@dimen/application_layout_left_padding"
    android:orientation="vertical">
    <TextView
        android:id="@+id/name_available_device"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingTop="@dimen/list_view_padding_top"
        android:paddingBottom="@dimen/line_separator_padding"
        android:textColor="@color/black"
        android:scrollHorizontally="true"
        android:ellipsize="end" />

    <TextView
        android:id="@+id/address_available_device"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:paddingBottom="@dimen/list_view_padding_bottom"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:ellipsize="end" />

</LinearLayout>
