<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:minHeight="@dimen/single_line_item_list_height">
    <com.hanks.library.AnimateCheckBox
        android:id="@+id/item_selected"
        android:layout_width="@dimen/auxiliary_single_list_item_action_width"
        android:layout_height="@dimen/auxiliary_single_list_item_action_height"
        android:paddingLeft="@dimen/auxiliary_single_list_item_action_left_padding"
        android:paddingRight="@dimen/auxiliary_single_list_item_action_right_padding"
        android:paddingBottom="@dimen/auxiliary_single_list_item_action_bottom_padding"
        android:paddingTop="@dimen/auxiliary_single_list_item_action_top_padding"
        app:animDuration="200"
        app:checkedColor="@color/colorPrimary"
        app:lineColor="#fff"
        app:lineWidth="1.2dp"
        app:unCheckColor="@color/mb_blue"/>

    <TextView
        android:id="@+id/device"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/black"
        android:paddingTop="@dimen/single_list_item_text_view_padding_top"/>

</LinearLayout>